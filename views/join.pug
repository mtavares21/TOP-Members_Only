extend layout

block content
  div(class='h-full w-full p-20 flex items-center justify-center')
    div(class='w-2/3 h-full' style={'background-repeat':'no-repeat','background-size':'contain', 'background-image':`url('/images/join.png')` })
    div(class='flex flex-wrap bg-black text-white w-1/3 m-20 h-1/2 justify-center p-7 py-10')
      h2=title
      form(class='flex w-full flex-wrap justify-center' action='' method='POST')
        label( class='w-full text-center' for='memberCode') Insert Code
        input(class='flex w-full text-center text-black' name='memberCode' type='password')
        button(class='my-4 w-30 h-7 bg-white text-black text-l px-4 shadow-inner self-center' type='submit') Join