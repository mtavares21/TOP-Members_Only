extend layout

block content
  div(class='h-full w-full p-20 flex items-center justify-center')
    div(class='w-2/3 h-full' style={'background-repeat':'no-repeat','background-size':'contain', 'background-image':`url('/images/signUp.png')` })
    div(class='flex flex-wrap bg-black text-white w-1/3 m-20 h-4/5 justify-center p-7 py-10')
      h2(class='text-xl')=title
      form(class='flex w-full h-full flex-wrap justify-start items-around' action='' method='POST')
        label(for='firstname') First Name
        input(class='w-full my-1 text-black' name='firstname' type='text')
        label(for='lastname') Last Name
        input( class='w-full my-1 text-black' name='lastname' type='text')
        label(for='username') Username
        input(class='w-full my-1 text-black' name='username'  type='text')
        label(for='password') Password
        input(class='w-full my-1 text-black' name='password' type='password')
        label(for='confirmPassword')  Confirm Password
        input(class='w-full my-1 text-black' name='confirmPassword' type='password')
        button(class='my-4 w-30 h-7 bg-white text-black text-l px-4 shadow-inner self-center' type='submit') Sign Up
